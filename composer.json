{
    "name": "animaid/animaid",
    "description": "AnimaID - Management platform for animation centers",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.9",
        "monolog/monolog": "^3.5",
        "symfony/validator": "^6.4",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "AnimaID\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnimaID\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "cs:check": "phpcs --standard=PSR12 src/",
        "cs:fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
